<div class="col-lg-12">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
    <% if vendor_signed_in? %>
    <h2>あんたが現在登録している物件リストです.</h2>
    <% else %>
    <h2>現在登録されている物件リストです.</h2>
    <% end %>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>物件名</th>
          <th>価格</th>
          <th>住所</th>
          <th>画像</th>
          <th>間取り</th>
          <% if vendor_signed_in? %>
          <th colspan="3"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |property| %>
          <tr>
            <td><%= property.title %></td>
            <td><%= property.price %></td>
            <td><%= property.address %></td>
            <td><%= property.image %></td>
            <td><%= property.layout %></td>
            <% if vendor_signed_in? %>
            <td><%= link_to '詳細', property %></td>
            <td><%= link_to '編集', edit_property_path(property) %></td>
            <td><%= link_to '削除', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if vendor_signed_in? %>
    <%= link_to '新しい物件を登録する', new_property_path, :class => "btn btn-warning" %>
    <% else %>
    <%= link_to '戻る', root_path, :class => "btn btn-warning" %>
    <% end %>
  </div>
  <div class="col-lg-1"></div>
</div>
