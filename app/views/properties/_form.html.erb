    <%= f.label :title, '物件名' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price, '価格' %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :address, '住所' %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :image, '画像' %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :layout, '間取り' %><br>
    <%= f.text_field :layout %>
  </div>
  <div class="actions">
    <%= f.submit '登録', :class => "btn btn-warning" %>
  </div>
<% end %>
